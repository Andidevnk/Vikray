<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".NextFollowup_Status">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/txtcolors"
                android:fontFamily="monospace"
                android:text="Customer Name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:id="@+id/name"
                android:text="Customer name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/txtcolors"
                android:fontFamily="monospace"
                android:text="Vehicle Model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:id="@+id/model"
                android:text="Model Enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/txtcolors"
                android:fontFamily="monospace"
                android:text="Mobile "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />
            <TextView
                android:autoLink="phone"
                android:clickable="true"
                android:textColorLink="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:id="@+id/phone_number"
                android:text="Phone Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/txtcolors"
                android:fontFamily="monospace"
                android:text="Email "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />
            <TextView
                android:clickable="true"
                android:autoLink="email"
                android:textColorLink="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:id="@+id/e_address"
                android:text="Email Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Spinner
                android:entries="@array/SelectOption1"
                android:layout_marginTop="20dp"
                android:id="@+id/statusspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <LinearLayout
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:id="@+id/deliverydate"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="15dp"/>

                </android.support.design.widget.TextInputLayout>
                <Button
                    android:background="@color/reportscardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_marginTop="7dp"
                    android:text="Select Date"/>
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/layout22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:id="@+id/deliverytime"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="15dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:background="@color/reportscardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:layout_marginTop="7dp"
                    android:text="Select Time"/>
            </LinearLayout>


            <TextView
                android:textColor="@color/txtcolors"
                android:visibility="gone"
                android:text="Select Reason"
                android:id="@+id/spiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:visibility="gone"
                android:id="@+id/reasoonsspinner"
                android:entries="@array/Reasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:textColor="@color/txtcolors"
                android:visibility="gone"
                android:id="@+id/txtremarksnotintrested"
                android:text="Remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:visibility="gone"
                android:hint="Remarks"
                android:id="@+id/remarkss"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lines="3"
                android:scrollHorizontally="false" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/side_nav_bar"
                android:id="@+id/submitstatus"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>