<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quotation.nk.quotmanager.GatePass_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/getpassback"
        android:layout_width="match_parent"
        android:layout_height="80dp">



        <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Gate pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:textColor="@color/tablayout1"
                android:textSize="15sp"
                android:text="Select Location From"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/locationfrom_spiner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>


            <TextView
                android:textSize="15sp"
                android:textColor="@color/tablayout1"
                android:layout_marginTop="10dp"
                android:text="Select Location To"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/locationto_spiner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>



            <TextView
                android:textSize="15sp"
                android:textColor="@color/tablayout1"
                android:layout_marginTop="10dp"
                android:text="Delivered By"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/deliveredby_spiner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>


            <TextView
                android:textSize="15sp"
                android:textColor="@color/tablayout1"
                android:layout_marginTop="10dp"
                android:text="Delivered To"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/deliveredto_spiner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/transportedname"
                android:textColor="@color/tablayout1"
                android:hint="Transported by"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/tablayout1"
            android:text="Add Models List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/modelslist_spiner"
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/frame_list_spiner"
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:popupBackground="@color/cardview_dark_background"
                android:id="@+id/engine_list_spiner"
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>



            <ImageButton
                android:src="@drawable/ic_action_name"
                android:id="@+id/adding_lits_btn"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/select_list_recycle"
                android:visibility="visible"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>


        <Button
            android:layout_marginTop="20dp"
            android:background="@color/tablayout1"
            android:id="@+id/submit_list"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>
</LinearLayout>
