<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quotation.nk.quotmanager.Vehicle_Locate_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/getpassback"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Location Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tablayout1"
            android:text="Select Model"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:textColor="@color/tablayout1"
            android:text="Select Frame No."
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:textColor="@color/tablayout1"
            android:text="Select Engine No."
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:popupBackground="@color/cardview_dark_background"
            android:id="@+id/serachmodel_spiner"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <Spinner
            android:popupBackground="@color/cardview_dark_background"
            android:id="@+id/searchmodel_frameno"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <Spinner
            android:popupBackground="@color/cardview_dark_background"
            android:id="@+id/searchmodel_enginemno"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/search_btn"
        android:background="@color/tablayout1"
        android:text="Search"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/locationrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>






</LinearLayout>
